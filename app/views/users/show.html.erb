
<div class='row'>
    <div class='col-md-3 offset-md-1 border rounded shadow bg-light'>
        <h1>ChatGPT</h1>
        <table class='table table-hover table-inverse'>
            <tbody>
                <% @conversations.each do |conv| %>
                    <% if conv.model_id == 0 %>
                        <tr>
                        <td><%= link_to conv.title, conversation_path(conv.id) %></td>
                        </tr>
                    <% end %>
                <% end %>

                <%= form_with model:@new_conversation do |k| %>
                    <tr>
                    <td>
                        <%= k.hidden_field :title, value: '新しいスレッドのタイトル' %>
                        <%= k.hidden_field :model_id, value: 0 %>
                        <%= k.submit class: 'btn btn-primary' %>
                    </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

