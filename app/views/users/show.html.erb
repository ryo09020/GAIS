<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- ChatGPT Section -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="border rounded shadow-sm p-3 bg-light h-100 d-flex flex-column">
                <h2 class="text-center">ChatGPT</h2>
                <table class="table table-hover mb-3">
                    <tbody>
                        <% @conversations.each do |conv| %>
                            <% if conv.model_id == 0 %>
                                <tr>
                                    <td><%= link_to conv.title, conversation_path(conv.id), class: "text-decoration-none text-dark" %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
                <%= form_with model: @new_conversation, local: true do |k| %>
                    <%= k.hidden_field :title, value: '新しいスレッドのタイトル' %>
                    <%= k.hidden_field :model_id, value: 0 %>
                    <%= k.submit '作成', class: 'btn btn-primary w-100' %>
                <% end %>
            </div>
        </div>

